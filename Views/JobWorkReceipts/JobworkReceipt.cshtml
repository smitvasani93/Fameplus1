@section jQgridScripts{
    <script type="text/javascript">
        $(function () {
            $jqgrid = $("#jqgridtbl").jqGrid({
                url: "@Url.Action("JobworkReceiptDataTable", "JobWorkReceipts")",
                mtype: "GET",
                datatype: 'json',
                colModel: [
                    { label: "Account Code", name: "AccountCode", search: false, sortable: true, sorttype: "text" },
                    { label: "Account Name", name: "AccountName", sortable: true, searchoptions: { sopt: ['cn'] }},
                    { label: "Receipt Number", name: "SerialNumber", sortable: true, search: false },
                    { label: "Receipt Date", name: "ReferenceDate", sortable: true, formatter: "date", formatoptions: { srcformat: "m/d/Y h:i:s A", newformat: "d/m/Y" }, searchoptions: { sopt: ['eq', 'ne'] } }
                ],
                sortname: "ReferenceDate",
                sortorder: "desc",
                rowNum: 10,
                rowList: [10, 20, 30, 40, 50],
                height: '100%',
                pager: jQuery('#gqgridpager'),
                viewrecords: true,
                responsive: true,
                autoResize: true,
                emptyrecords: 'No records are available to display',
                jsonReader: {
                    root: "rows",
                    page: "page",
                    total: "total",
                    records: "records",
                    repeatitems: false,
                    Id: "0"
                },
                autowidth: true,
                multiselect: false,
                ondblClickRow: function (rowId) {
                    var rowData = jQuery(this).getRowData(rowId);
                    var srNumber = rowData['SerialNumber'];
                    let id = srNumber;
                    createDialogbox(id);

                }
            }).navGrid('#gqgridpager', { view: false, del: false, add: false, edit: false },
                {}, // default settings for edit
                {}, // default settings for add
                {}, // delete instead that del:false we need this
                { closeOnEscape: true, multipleSearch: false, closeAfterSearch: true }, // search options
                {} /* view parameters*/
            )
        });
    </script>
}

